<h3>ジャンル一覧・追加</h3>

<%= form_with model: @genre, url:admin_genres_path ,local:true do |f| %>

  <div class="field">
    <%= f.label :ジャンル名 %>
    <%= f.text_field :name,:placeholder => "ジャンル名", autofocus: true %>
  </div>
  
  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>

<% end %>


<table class="table">
  
  <tr>
    <th>ジャンル</th>
    <th></th>
    <th colspan="2"></th>
  </tr>
  
  <% @genres.each do|genre| %>
   <tr>
     
    <td><%=genre.name%></td>

    <td><%= link_to("/admin/genres/#{genre.id}/edit") do %>
    <button type="button">編集する</button>
    <%end%>
    </td>
    
    <td><%= link_to("/admin/genres/#{genre.id}",method: :delete, data: {confirm: "本当に削除しますか？"} ) do %>
    <button type="button">削除する</button>
    <%end%>
    </td>

   </tr>
  <% end %>
  
</table>