<h2>商品一覧</h2>

 <%= link_to new_admin_item_path, method: :get do %>
  新規作成（※アイコンで表示）
 <% end %>

<table class="table">

  <tr>
    <th>商品ID</th>
    <th>商品名</th>
    <th>税抜価格</th>
    <th>ジャンル</th>
    <th>ステータス</th>
    <th></th>
    <th colspan="6"></th>
  </tr>

  <% @items.each do|item| %>
   <tr>
    <td><%=item.id%></td>
    <td><%= link_to "#{item.name}","/admin/items/#{item.id}"%></td>
    <td><%=item.price%></td>
    <td><%=item.genre.name%></td>
    <td>
     <%if item.is_active%>
      販売中
    <%else%>
      販売停止中
    <%end%></td>
    <td>
     <%= link_to("/admin/items/#{item.id}",method: :delete, data: {confirm: "本当に削除しますか？"} ) do %>
     <button type="button">削除する</button>
     <%end%>
    </td>
  <% end %>
  
  
  </table>
  <%= paginate @items %>