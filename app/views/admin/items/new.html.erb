<div class="row">
 <div class = "col-md-5">
   <div class="sub-ti">
<h3>商品新規登録</h>
   </div>
  </div>
</div>

<br>


<%= form_with model: @item,url: admin_items_path,local: true do |f| %>

<table class="item-new-table">
  <div class="field">

    <tr>
    <th><%= f.label :商品画像 %></th>
    <td><%= f.attachment_field :image%></td>
    </tr>

    <tr>
    <th><%= f.label :商品名 %></th>
    <td><%= f.text_field :name,:size=>"40", :placeholder => "商品名", autofocus: true%></td>
    </tr>

    <tr>
    <th><%= f.label :商品説明 %></th>
    <td><%= f.text_area :introduction,:size=>"40", :placeholder => "ここに説明文を記述します" %></td>
    </tr>

    <tr>
    <th><%= f.label :ジャンル %></th>
    <td><%= f.select :genre_id, @genres.map{ |genre| [genre.name, genre.id] }, { include_blank: '選択してください'}%></td>
    </tr>

    <tr>
    <th><%= f.label :税抜価格 %></th>
    <td><%= f.text_field :price,:size=>"40", :placeholder => "1000円" %>円</td>
    </tr>

    <tr>
    <th><%= f.label :販売ステータス %></th>
    <td><%= f.radio_button :is_active, "true" %>販売中
        <%= f.radio_button :is_active, "false" %>販売停止中</td>
    </tr>

  </div>
</table>

<br>

<div class="centers">
  <div class="actions">
    <%= f.submit('新規登録',class: 'btn btn-success') %>
  </div>
</div>


<% end %>