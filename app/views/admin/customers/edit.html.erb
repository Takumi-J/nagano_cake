<h2><%=@customer.last_name%><%=@customer.first_name%>さんの会員情報編集</h2>

<%= form_with model: @customer, url: admin_customer_path, local: true do |f| %>

  <div class="field">
     会員ID<br />
    <%= @customer.id%>
  </div>


  <div class="field">
    <%= f.label :氏名 %><br />
    <%= f.text_field :last_name, autofocus: true %>
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :フリガナ %><br />
    <%= f.text_field :last_name_kana %>
    <%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    <%= f.label :郵便番号 %><br />
    <%= f.text_field :postal_code %>
  </div>

  <div class="field">
    <%= f.label :住所 %><br />
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :電話番号 %><br />
    <%= f.text_field :telephone_number %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email %>
  </div>
  
  <div class="field">
    <%= f.label :会員ステータス %>
    <%= f.radio_button :is_deleted, "false" %>有効
    <%= f.radio_button :is_deleted, "true" %>退会
　
  </div>


  <div class="actions">
    <%= f.submit "編集内容を保存" %>
  </div>
<% end %>

