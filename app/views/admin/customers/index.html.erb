<h2>会員一覧</h2>

<table class="table">

  <tr>
    <th>会員ID</th>
    <th>氏名</th>
    <th>メールアドレス</th>
    <th>ステータス</th>
    <th colspan="4"></th>
  </tr>

  <% @customers.each do|customer| %>
   <tr>
    <td><%=customer.id%></td>
    <td><%= link_to "#{customer.last_name}  #{customer.first_name}","/admin/customers/#{customer.id}"%></td>
    <td><%=customer.email%></td>
    <td>
     <%if customer.is_deleted%>
      退会
    <%else%>
      有効
    <%end%></td>
    
    <td>
     <%= link_to("/admin/customers/#{customer.id}",method: :delete, data: {confirm: "本当に削除しますか？"} ) do %>
     <button type="button">削除する</button>
     <%end%>
    </td>

  <% end %>
  
  </table>
  <%= paginate @customers %>