<div class="row">
 <div class = "col-md-5">
   <div class="sub-ti">
<h3>注文履歴一覧</h3>
   </div>
  </div>
</div>

<br>

<table class="table">
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @sum = 0%>
      <% @orders.each do |order| %>
      <tr>
        
        <td><%= link_to order.created_at.to_s(:datetime_jp),admin_order_path(order.id)%></td>
        
        <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
        
        <td>
          <% order.order_details.each do |order_a| %>
          <% @sum += order_a.amount%>
          <% end %>
          <%= @sum%>
        </td>
        
        <td><%= order.status%></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @orders %>