<h2>注文情報確認</h2>


<table class="table table-striped">
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th colspan="6"></th>
    </tr>
  </thead>

  <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= attachment_image_tag cart_item.item, :image, :fill, 50, 50, format: 'jpeg' %> <%= cart_item.item.name%></td>
        <td><%= cart_item.item.price%></td>
        <td><%= cart_item.amount %></td>
        <td><%= cart_item.amount*cart_item.item.price%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= form_with model: @order, url: orders_complete_path,method: :patch,local: true do |f| %>
<table>
  <tr>
    <th>送料</th>
    <td><%=@order.shipping_cost%></td>
    <%= f.hidden_field :shipping_cost, value: @order.shipping_cost%>
  </tr>

  <tr>
    <th>商品合計</th>
    <td><%= @sum %></td>
  </tr>

  <tr>
    <th>請求金額</th>
    <td><%= @sum * 1.1 + @order.shipping_cost %></td>
    <%= f.hidden_field :total_payment, value: @sum * 1.1 + @order.shipping_cost %>
  </tr>
</table>


<table>
  <tr>
    <th>支払方法</th>
    <td>
      <%if @order.payment_method == 0%>
      クレジットカード
      <% else %>
      銀行振込
      <% end %>
      <%= f.hidden_field :payment_method, value: @order.payment_method %>
    </td>
  </tr>

  <tr>
    <th>お届け先</th>
    <td>〒<%=@order.postal_code%> <%=@order.address%> <%=@order.name%></td>
    <%= f.hidden_field :postal_code, value:  @order.postal_code%>
    <%= f.hidden_field :address, value:  @order.address%>
    <%= f.hidden_field :name, value:  @order.name%>
  </tr>

</table>

  <div class="actions">
    <%= f.submit "注文を確定する" %>
  </div>

<% end %>