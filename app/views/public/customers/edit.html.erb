<div class="row">
 <div class = "col-md-5">
   <div class="sub-ti">
<h2>会員情報編集</h2>
   </div>
  </div>
</div>

<%= form_with model: @customer, url: customers_path, local: true do |f| %>
<table>
  <div class="field">
    <tr>
    <th><%= f.label :氏名%></th>
    <td><%= f.text_field :last_name,:placeholder => "令和", autofocus: true %><%= f.text_field :first_name, :placeholder => "道子"%></td>
    </tr>

    <tr>
    <th><%= f.label :フリガナ%></th>
    <td><%= f.text_field :last_name_kana, :placeholder => "レイワ"%><%= f.text_field :first_name_kana, :placeholder => "ミチコ"%></td>
    </tr>

    <tr>
    <th><%= f.label :メールアドレス %></th>
    <td><%= f.email_field :email, :placeholder => "sample@example.com", autocomplete: "email" %></td>
    </tr>

    <tr>
    <th><%= f.label :郵便番号 %></th>
    <td><%= f.text_field :postal_code, :placeholder => "000000"%></td>
    </tr>

    <tr>
    <th><%= f.label :住所 %></th>
    <td><%= f.text_field :address,:size=>"60", :placeholder => "東京都渋谷区代々木神園町0-0"%></td>
    </tr>

    <tr>
    <th><%= f.label :電話番号 %></th>
    <td><%= f.text_field :telephone_number, :placeholder => "00000000000"%></td>
    </tr>

  </div>

</table>

<br>

<div class="row">
 <div class = "col-md-3 offset-md-1">
<div class = "inlines">
  <div class="actions">
    <%= f.submit('編集内容を保存',class: 'btn btn-success') %>
  </div>
</div>
 </div>



<% end %>

 <div class = "col-md-3 offset-md-1">
<div class = "inlines">
 <%= button_to "退会する", {controller: 'public/customers', action: 'delete_check'},{method: :get, class: 'btn btn-danger'} %>
</div>
 </div>
 </div>


