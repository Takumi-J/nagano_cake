<div class="row">
 <div class = "col-md-5">
   <div class="sub-ti">
<h3>配送先編集</h3>
   </div>
  </div>
</div>

<br>

<%= form_with model: @address, local:true do |f| %>


<table class = "nomal-table">
  <div class="field">
  <tr>
    <th><%= f.label :郵便番号（ハイフンなし） %></th>
    <td><%= f.text_field :postal_code,:placeholder => "0000000", autofocus: true %></td>
  </tr>
  
  <tr>
    <th><%= f.label :住所 %></th>
    <td><%= f.text_field :address,:size=>"60",:placeholder => "東京都渋⾕区代々⽊神園町0-0" %></td>
  </tr>
  
  <tr>
    <th><%= f.label :宛名 %></th>
    <td><%= f.text_field :name,:placeholder => "令和道⼦"%>
    <td>
    <div class="actions">
    <%= f.submit('変更内容を保存',class: 'btn btn-success') %>
    </div>
    </td>
  </td>
  </tr>
  
  </div>
</table>
<% end %>