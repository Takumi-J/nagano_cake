<div class="row">
 <div class = "col-md-5">
   <div class="sub-ti">
<h3>配送先登録/一覧</h3>
   </div>
  </div>
</div>

<br>

<%= form_with model: @address, local:true do |f| %>
<table class = "nomal-table">
  <div class="field">
  <tr>
    <th><%= f.label :郵便番号（ハイフンなし） %></th>
    <td><%= f.text_field :postal_code,:placeholder => "0000000", autofocus: true %></td>
  </tr>
  
  <tr>
    <th><%= f.label :住所 %></th>
    <td><%= f.text_field :address,:size=>"60",:placeholder => "東京都渋⾕区代々⽊神園町0-0" %></td>
  </tr>
  
  <tr>
    <th><%= f.label :宛名 %></th>
    <td><%= f.text_field :name,:placeholder => "令和道⼦"%>
    <td>
    <div class="actions">
    <%= f.submit('新規登録',class: 'btn btn-success') %>
    </div>
    </td>
  </td>
  </tr>
  
  </div>
</table>
<% end %>

<br>
<br>

<table class="yoko_table">
  
  <tr>
    <th>郵便番号</th>
    <th>住所</th>
    <th>宛名</th>
    <th></th>
  </tr>
  
  <% @addresses.each do|address_ex| %>
   <tr>
    <td><%=address_ex.postal_code%></td>
    
    <td><%=address_ex.address%></td>
    
    <td><%=address_ex.name%></td>
    
        
    <td>
      <div class="centers">
        <%= link_to("/addresses/#{address_ex.id}/edit") do %>
    <button type="button" class="btn btn-success">編集する</button>
    <%end%>
    <%= link_to("/addresses/#{address_ex.id}",method: :delete, data: {confirm: "本当に削除しますか？"} ) do %>
    <button type="button" class="btn btn-danger">削除する</button>
    <%end%>
    </div>
    </td>

   </tr>
  <% end %>
  
</table>