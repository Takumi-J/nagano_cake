<h3>配送先登録/一覧</h3>

<%= form_with model: @address, local:true do |f| %>

  <div class="field">
    <%= f.label :郵便番号（ハイフンなし） %>
    <%= f.text_field :postal_code,:placeholder => "0000000", autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address,:placeholder => "東京都渋⾕区代々⽊神園町0-0" %>
  </div>
  
  <div class="field">
    <%= f.label :宛名 %>
    <%= f.text_field :name,:placeholder => "令和道⼦"%>
  </div>
  
  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>


<table class="table">
  
  <tr>
    <th>郵便番号</th>
    <th>住所</th>
    <th>宛名</th>
    <th></th>
    <th colspan="4"></th>
  </tr>
  
  <% @addresses.each do|address_ex| %>
   <tr>
    <td><%=address_ex.postal_code%></td>
    
    <td><%=address_ex.address%></td>
    
    <td><%=address_ex.name%></td>
    
        
    <td><%= link_to("/addresses/#{address_ex.id}/edit") do %>
    <button type="button">編集する</button>
    <%end%>
    </td>
    

    <td><%= link_to("/addresses/#{address_ex.id}",method: :delete, data: {confirm: "本当に削除しますか？"} ) do %>
    <button type="button">削除する</button>
    <%end%>
    </td>

   </tr>
  <% end %>
  
</table>