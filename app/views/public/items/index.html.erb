
<div class = "inlines">
<h2>商品一覧</h2>
</div>

<div class ="inlines">
<p>（全<%=@items_all.count %>件）</p>
</div>


<div class="row">
  <% @items.each do |item|  %>
  <div class="col-md-3">
     <div>
       <%= link_to "/items/#{item.id}" do %>
        <%= attachment_image_tag item, :image, :fill, 200, 200, format: 'jpeg' %>
       <% end %>
     </div>
     <div>
       <p><%= item.name%></p>
       <p>¥<%=item.price%></p>
     </div>
   </div>
  <% end %>
</div>

<%= paginate @items %>
